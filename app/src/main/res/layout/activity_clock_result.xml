<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <ImageView
        android:id="@+id/Iv_pagebg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/splash_back"/>
        <TextView
            android:id="@+id/Tv_initface_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在初始化中,请稍等..."
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="28sp"
            />
        />

    <LinearLayout
        android:id="@+id/Ll_screen_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
    <SurfaceView
        android:id="@+id/Sv_face"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/l23"
                android:adjustViewBounds="true"
                />
            <LinearLayout
                android:layout_width="1208dp"
                android:layout_height="600dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                >
            <ImageView
                android:id="@+id/Iv_screen_img"
               android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/screengrid"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/scanlogo"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="扫描中..."
                    android:layout_marginLeft="5dp"
                    android:textSize="24sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80dp"
                android:layout_marginLeft="90dp"
                android:visibility="gone"
                >
            <Button
                android:id="@+id/Btn_format_detect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/ls_format_detect"
                />
                <Button
                    android:id="@+id/Btn_ls_detect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:background="@drawable/ls_detect"
                    />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>



    <!-- 打卡结果布局-->

    <LinearLayout
        android:id="@+id/Ll_checkwork_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="100dp"
 >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="@drawable/idframe"
            android:layout_margin="20dp"
            >
            <!--员工信息-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
               <LinearLayout
                   android:id="@+id/Ll_user_icon"
                   android:layout_width="wrap_content"
                   android:background="@drawable/photoframe"
                   android:gravity="center"
                   android:layout_marginLeft="40dp"
                   android:layout_marginTop="70dp"
                   android:padding="10dp"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:id="@+id/Iv_user_icon"
                       android:layout_width="150dp"
                       android:layout_height="200dp"
                       android:adjustViewBounds="true"
                        />
               </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="68dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_toRightOf="@+id/Ll_user_icon"
                    >
                    <TextView
                        android:id="@+id/Tv_usernumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:lines="1"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/Tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginTop="26dp"
                        android:lines="1"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/Tv_userdept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:lines="1"
                        android:layout_marginTop="26dp"
                    />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/Tv_userpost_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="职位："
                            android:textSize="20sp"
                            />
                        <TextView
                            android:id="@+id/Tv_userpost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:lines="2"
                            android:textSize="20sp"
                            />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="70dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/successframe"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Iv_checkwork_pic"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/success" />

                <TextView
                    android:id="@+id/Tv_checkwork_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/Tv_checkwork_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/Rl_clock_result_patent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                <TextView
                    android:id="@+id/Tv_week_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月份考勤记录"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(一切以月底统计为准)"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/Tv_week_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/recordframe"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/Tv_week_tardiness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/recordframe"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/Tv_week_leavingerly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/recordframe"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/Tv_week_lost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/recordframe"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Ll_weekresult_parent"
                android:layout_width="match_parent"
                android:layout_height="540dp"
                android:orientation="vertical"
                android:paddingLeft="25dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:background="@drawable/week_result"
                >
                <LinearLayout
                    android:id="@+id/Ll_week_parent"
                    android:layout_width="700dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="一" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:text="二" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="三" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="四" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="五" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="六" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="日" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/Rv_clock_result"
                    android:layout_width="700dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/Tv_nonet_tip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="离线打卡中.."
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    />
            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/Ll_weekresult_parent"
                android:layout_marginRight="60dp"
                >
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/result_select_true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正常"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/result_select_false"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="异常"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
    <!-- 打卡结果布局-->




    <!--当前时间-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="35dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logo_name"
            android:textSize="20sp"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:id="@+id/Ll_currenttime_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            >
    <TextView
        android:id="@+id/Tv_current_time_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        />
        <TextView
            android:id="@+id/Tv_current_time_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
        </LinearLayout>

    </RelativeLayout>

    <!--待机界面-->
    <RelativeLayout
        android:id="@+id/Rl_await_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/wait_img1"
        >
      <!--  <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/wait_img1"
         />-->
        <TextView
            android:id="@+id/Tv_time_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="55sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="410dp"
            android:text="45645"
            />
        <TextView
            android:id="@+id/Tv_time_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginTop="490dp"
            android:layout_centerHorizontal="true"
            android:text="465484"
            />
    </RelativeLayout>
</RelativeLayout>
